    <footer class="blog-footer p-4 bg-secondary">
        <span>{% for item in site.navigation %}
            {% if item.label %}
            <a style="color: white;" {% if item.newtab == true %}target="_blank" {% endif %}href="{{ item.url }}">{{ item.label }}</a>
            {% elif item.svg %}
            <a style="color: white;" {% if item.newtab == true %}target="_blank" {% endif %}href="{{ item.url }}"><svg class="icon" style="fill: white;" aria-hidden="true" focusable="false"><use xlink:href="#{{ item.svg }}"></use></svg></a>
            {% endif %}
            {% if not loop.last %}&nbsp&nbsp|&nbsp&nbsp{% endif %}
        {% endfor %}</span>
        <br/>
        <br/>
        <nav class="nav d-flex justify-content-center">
