{% from "partials/icon.njk" import icon %}

<div class="container" style="background-color: white">
    <header class="blog-header py-3 px-0">
        <div class="row p-2">
            {% if site.logo %}
            <div class="pr-0 pr-md-4 col-md-2 order-md-10 px-0 pb-3 pb-md-0 d-flex justify-content-center justify-content-md-end">
                <img class="site-logo" height="67" src="{{ site.url }}/{{ site.logo }}" alt="{{ site.title }}">
            </div>
            {% endif %}
            <div class="col-md-10 order-md-1 px-2">
                    <a class="blog-header-logo d-none d-md-block pb-2" href="{{ site.url }}">{{ site.title }}</a>
                    <a class="blog-header-logo d-md-none d-block text-center" href="{{ site.url }}">{{ site.short_title }}</a>
                    <a class="blog-sub-header-logo d-none d-md-block" href="{{ site.url }}">{{ site.description }}</a>
            </div>
        </div>
        <div class="pt-1 d-flex justify-content-center justify-content-md-start px-0">
            {% include 'partials/navigation.njk' %}
        </div>
    </header>
</div>

